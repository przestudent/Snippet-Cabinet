generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  userId    Int      @id @default(autoincrement())
  clerkId   String   @unique
  email     String   @unique
  createdAt DateTime @default(now())

  profileImageUrl String
  userSnippets    UserSnippets[]
  username        String
}

model UserList {
  listId Int @id @default(autoincrement())

  createdAt DateTime @default(now())
}

model UserSnippets {
  snippetId Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  public         Boolean
  langType       languageTypes
  tagBoilerPlate Boolean       @default(false)
  snippetCode    String        @db.LongText
  snippetTitle   String
  userOwner      User          @relation(fields: [userOwnerId], references: [userId])
  userOwnerId    Int

  @@unique([snippetTitle, userOwnerId])
  @@index([userOwnerId])
}

